{
    "compilerOptions": {
      "baseUrl": "./",
      "esModuleInterop": true,
      "jsx": "react-jsx",
      "typeRoots": ["./node_modules/@types", "./src/types"],
      "module": "esnext",
      "moduleResolution": "node",
      "lib": [
        "dom",
        "esnext",
      ],
      "strict": true,
      "sourceMap": true,
      "target": "esnext",
      "paths": {
        "shared": ["./src/shared"],
        "components": ["./src/components"]
      }
    },
    "exclude": [
      "node_modules"
    ]
  }